/* 水平间距 */
.rich-text ._img {
  max-width: 100%;
}
.detail {
  background: #f8f8f8;
  min-height: calc(100vh - 0px);
}
.detail .container {
  padding: 30rpx;
  background: #fff;
}
.detail .container .title {
  font-size: 46rpx;
  color: #333;
  line-height: 1.4em;
  font-weight: 600;
}
.detail .container .userinfo {
  padding: 20rpx 0 50rpx;
  display: flex;
  align-items: center;
}
.detail .container .userinfo .avatar {
  width: 60rpx;
  height: 60rpx;
  padding-right: 15rpx;
}
.detail .container .userinfo .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.detail .container .userinfo .text {
  font-size: 28rpx;
  color: #555;
}
.detail .container .userinfo .text .small {
  font-size: 20rpx;
  color: #999;
}
.detail .container .content {
  width: 100%;
}
.detail .container .content uni-rich-text ._img {
  max-width: 100% !important;
}
.detail .container .content .rich-text ._img {
  max-width: 100%;
}
.detail .container .like {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 50rpx 50rpx;
}
.detail .container .like .btn {
  width: 260rpx;
  height: 120rpx;
  background: #e4e4e4;
  border-radius: 100rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 28rpx;
}
.detail .container .like .btn .iconfont {
  font-size: 50rpx;
}
.detail .container .like .btn.active {
  background: #0199FE;
}
.detail .container .like .text {
  font-size: 26rpx;
  color: #666;
}
.detail .container .like .text .num {
  color: #0199FE;
}
.detail .container .like .text .spot {
  padding: 0 10rpx;
}
.detail .container .like .users {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}
.detail .container .like .users image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 3px solid #fff;
  margin-left: -20rpx;
}
.detail .comment {
  padding: 30rpx;
  padding-bottom: 120rpx;
}

