/* 水平间距 */
.wrapper {
  width: 100%;
  height: 100vh;
  background-color: #fffae5;
}
.wrapper .center {
  width: 90%;
  height: 80%;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.wrapper .center .pic {
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
  margin-bottom: 50rpx;
}
.wrapper .center .pic image {
  width: 100%;
  height: 100%;
}
.wrapper .center .bottom {
  width: 80%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 30rpx;
  height: auto;
}
.wrapper .center .bottom .contents {
  display: flex;
  flex-direction: column;
  width: 80%;
  height: 70%;
  margin: 0 auto;
  padding-bottom: 20rpx;
}
.wrapper .center .bottom .contents .title {
  text-align: center;
  color: #9E6D38;
  font-size: 18px;
  margin-bottom: 20rpx;
}
.wrapper .center .bottom .contents .content {
  margin-bottom: 20rpx;
}
.wrapper .center .bottom .fake {
  width: 100%;
  margin: 0 auto;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
}
.wrapper .center .bottom .fake view {
  width: 50rpx;
  height: 50rpx;
  background-color: #fffae5;
  border-radius: 50%;
}

