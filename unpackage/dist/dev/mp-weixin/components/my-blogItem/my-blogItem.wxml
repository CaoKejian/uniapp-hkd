<view class="blogItem"><view class="head"><view class="userinfo"><view class="avatar"><image src="{{item.user_touxiang?item.user_touxiang:'../../static/morentouxiang.jpg'}}" mode="aspectFill"></image></view><view class="name">{{item.user_nicheng||item.user_id}}</view><view class="time"><uni-dateformat vue-id="ee4b1bd8-1" date="{{item.publish_date}}" format="MM月dd hh:mm" threshold="{{[60000,3600000*24*30]}}" bind:__l="__l"></uni-dateformat></view></view></view><view class="body"><view data-event-opts="{{[['tap',[['gotoDetail',['$event']]]]]}}" class="title" bindtap="__e">{{''+item.title+''}}</view><block wx:if="{{item.description}}"><view data-event-opts="{{[['tap',[['gotoDetail',['$event']]]]]}}" class="text" bindtap="__e"><view class="t">{{''+item.description+''}}</view></view></block><block wx:if="{{item.picurls.length}}"><view class="piclist"><block wx:for="{{item.picurls}}" wx:for-item="pic" wx:for-index="index" wx:key="*this"><view class="{{['pic',item.picurls.length==1?'only':'']}}"><image src="{{pic}}" mode="aspectFill" data-event-opts="{{[['tap',[['clickPic',[index]]]]]}}" bindtap="__e"></image></view></block></view></block></view><view class="info"><view class="box"><text class="iconfont icon-a-27-liulan"></text><text>{{item.view_count}}</text></view><view data-event-opts="{{[['tap',[['gotoDetail',['$event']]]]]}}" class="box" bindtap="__e"><text class="iconfont icon-a-5-xinxi"></text><text>{{item.comment_count&&item.comment_count>0?item.comment_count:"评论"}}</text></view><view data-event-opts="{{[['tap',[['clicklike',['$0','$1'],['item.user_nicheng','item']]]]]}}" class="{{['box',item.isLike?' active':'']}}" bindtap="__e"><text class="iconfont icon-a-106-xihuan"></text><text>{{item.like_count?item.like_count:"点赞"}}</text></view></view></view>