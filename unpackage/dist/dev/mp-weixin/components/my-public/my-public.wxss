/* 水平间距 */
.wrapper {
  width: 100%;
  background-color: #fffae5;
  padding-top: 40px;
}
.drop {
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  z-index: 120;
}
.drop .erweima {
  width: 300rpx;
  height: 300rpx;
  border-radius: 30rpx;
  position: relative;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.public {
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}
.public .top {
  display: flex;
  align-items: center;
}
.public .top image {
  width: 65px;
  height: 65px;
  border-radius: 50%;
  position: relative;
  z-index: 91;
}
.public .top text {
  border-radius: 30rpx;
  height: 60rpx;
  z-index: 90;
  background-color: #e7b203;
  text-align: left;
  padding: 5rpx 30rpx 5rpx 60rpx;
  -webkit-transform: translateX(-20px);
          transform: translateX(-20px);
  line-height: 60rpx;
  color: #fff;
  letter-spacing: 1px;
}
.public .bottom {
  background-color: #ffeb99;
  width: 80%;
  position: relative;
  top: -70rpx;
  margin: 0 auto;
  padding: 70rpx 20rpx 30rpx 50rpx;
  border-radius: 25rpx;
}
.public .bottom .bottom-item {
  display: block;
  width: 90%;
  margin: 0 auto;
}
.public .bottom .erweima {
  float: right;
  margin-right: 18px;
  color: #9e6d38;
}
.public .bottom .erweimaPic {
  width: 300rpx;
  height: 300rpx;
}
.prop {
  position: relative;
}
.prop .text {
  position: absolute;
  top: -10rpx;
  right: 0;
  font-size: 24px;
}

